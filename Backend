<?php
$conn = new mysqli("localhost", "root", "", "warehouse");
if ($conn->connect_error) die("DB Error");

if (isset($_GET['tag'])) {
    $conn->query("INSERT INTO inventory(tag_id,time) VALUES ('".$_GET['tag']."',NOW())");
    echo "Inventory Updated";
}

if (isset($_GET['temp']) && isset($_GET['hum'])) {
    $conn->query("INSERT INTO environment(temperature,humidity,time) VALUES ('".$_GET['temp']."','".$_GET['hum']."',NOW())");
    echo "Environment Updated";
}
?>
